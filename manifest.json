{
	"manifest_version": 2,

	"name": "4Facebook",
	"description": "Extra tools for Facebook",
	"version": "1.1",
	"content_scripts": [
		{
			"matches": ["https://www.facebook.com/*"],
			"js": ["content.js"]
		}
	],
	"permissions": [
          "tabs",
        "notifications",
        "http://*/",
        "https://*/"
        ],
	"browser_action": {
		"default_popup": "on_off.html",
		"default_title": "4Facebook",
		"default_icon": {
			"200": "images/4F200.png",
			"19": "images/4F19.png",
			"39": "images/4F39.png"
		}
	},

	"icons": {
		"19": "images/4F19.png",
		"48": "images/4F48.png",
		"128": "images/4F128.png"
	}
}